{
  "name": "cucumber-java-easy-runner",
  "displayName": "%ext.displayName%",
  "description": "%ext.description%",
  "version": "0.1.4",
  "publisher": "HakkiEtem",
  "author": {
    "name": "Hakki Etem"
  },
  "icon": "images/logo.png",
  "engines": {
    "vscode": "^1.93.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hakkietem350/Cucumber-Java-Easy-Runner.git"
  },
  "categories": [
    "Testing",
    "Debuggers",
    "Programming Languages",
    "Other"
  ],
  "keywords": [
    "cucumber",
    "java",
    "test",
    "bdd",
    "gherkin",
    "feature",
    "runner",
    "testing"
  ],
  "activationEvents": [
    "onLanguage:gherkin",
    "workspaceContains:**/*.feature"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cucumberJavaEasyRunner.runFeature",
        "title": "%cmd.runFeature%"
      },
      {
        "command": "cucumberJavaEasyRunner.runScenario",
        "title": "%cmd.runScenario%"
      },
      {
        "command": "cucumberJavaEasyRunner.runExample",
        "title": "%cmd.runExample%"
      },
      {
        "command": "cucumberJavaEasyRunner.debugFeature",
        "title": "%cmd.debugFeature%"
      },
      {
        "command": "cucumberJavaEasyRunner.debugScenario",
        "title": "%cmd.debugScenario%"
      },
      {
        "command": "cucumberJavaEasyRunner.debugExample",
        "title": "%cmd.debugExample%"
      },
      {
        "command": "cucumberJavaEasyRunner.runFeatureCodeLens",
        "title": "%cmd.runFeatureCodeLens%"
      },
      {
        "command": "cucumberJavaEasyRunner.runScenarioCodeLens",
        "title": "%cmd.runScenarioCodeLens%"
      },
      {
        "command": "cucumberJavaEasyRunner.runExampleCodeLens",
        "title": "%cmd.runExampleCodeLens%"
      },
      {
        "command": "cucumberJavaEasyRunner.debugFeatureCodeLens",
        "title": "%cmd.debugFeatureCodeLens%"
      },
      {
        "command": "cucumberJavaEasyRunner.debugScenarioCodeLens",
        "title": "%cmd.debugScenarioCodeLens%"
      },
      {
        "command": "cucumberJavaEasyRunner.debugExampleCodeLens",
        "title": "%cmd.debugExampleCodeLens%"
      },
      {
        "command": "cucumberJavaEasyRunner.refreshTests",
        "title": "%cmd.refreshTests%",
        "icon": "$(refresh)"
      }
    ],
    "menus": {
      "commandPalette": [
        {
          "command": "cucumberJavaEasyRunner.refreshTests",
          "when": "true"
        }
      ],
      "explorer/context": [
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaEasyRunner.runFeature",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaEasyRunner.runFeature",
          "group": "1_cucumber@1"
        },
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaEasyRunner.runScenario",
          "group": "1_cucumber@2"
        },
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaEasyRunner.runExample",
          "group": "1_cucumber@3"
        },
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaEasyRunner.debugFeature",
          "group": "1_cucumber@4"
        },
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaEasyRunner.debugScenario",
          "group": "1_cucumber@5"
        },
        {
          "when": "resourceExtname == .feature",
          "command": "cucumberJavaEasyRunner.debugExample",
          "group": "1_cucumber@6"
        }
      ]
    },
    "languages": [
      {
        "id": "gherkin",
        "extensions": [
          ".feature"
        ],
        "aliases": [
          "Gherkin",
          "feature"
        ]
      }
    ],
    "configuration": {
      "title": "%config.title%",
      "properties": {
        "cucumberJavaEasyRunner.enableCodeLens": {
          "type": "boolean",
          "default": false,
          "description": "%config.enableCodeLens%"
        },
        "cucumberJavaEasyRunner.autoCompileMaven": {
          "type": "boolean",
          "default": false,
          "description": "%config.autoCompileMaven%"
        },
        "cucumberJavaEasyRunner.additionalGluePaths": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [],
          "description": "%config.additionalGluePaths%"
        },
        "cucumberJavaEasyRunner.excludeBuildDirectories": {
          "type": "array",
          "items": {
            "type": "string"
          },
          "default": [
            "target",
            "build",
            "out",
            "dist",
            "node_modules",
            ".git"
          ],
          "description": "%config.excludeBuildDirectories%"
        },
        "cucumberJavaEasyRunner.objectFactory": {
          "type": "string",
          "description": "%config.objectFactory%"
        },
        "cucumberJavaEasyRunner.logLevel": {
          "type": "string",
          "enum": [
            "error",
            "warn",
            "info",
            "debug",
            "trace"
          ],
          "default": "info",
          "description": "%config.logLevel%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run generate-nls && npm run compile",
    "generate-nls": "node scripts/generate-nls.js",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/vscode": "^1.93.1",
    "@types/glob": "^8.1.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "typescript": "^5.0.4",
    "eslint": "^8.39.0",
    "glob": "^8.1.0",
    "@typescript-eslint/eslint-plugin": "^5.59.1",
    "@typescript-eslint/parser": "^5.59.1"
  }
}